Problem Link: https://leetcode.com/problems/max-chunks-to-make-sorted/

class Solution {
public:
    int maxChunksToSorted(vector<int>& arr) {
        int n=arr.size(), chunks=0, runningVal=0, expectedVal=0;
        for(int i=0;i<n;i++) {
            runningVal+=arr[i];
            expectedVal+=i;
            if(runningVal==expectedVal)
                chunks++;
        }
        return chunks;
    }
};
