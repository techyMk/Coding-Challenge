//Problem Link: https://leetcode.com/problems/sqrtx/

class Solution {
public:
    int mySqrt(int x) {
        long long left=0, right=x/2+1, ans, mid;
        while(left<=right) {
            mid=left+(right-left)/2;
            if((mid*mid)==x)
                return mid;
            else if((mid*mid)>x)
                right=mid-1;
            else {
                ans=mid;
                left=mid+1;
            }
        }
        return ans;
    }
};
