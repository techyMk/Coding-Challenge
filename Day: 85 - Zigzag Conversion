//Problem Link: https://leetcode.com/problems/zigzag-conversion/

class Solution {
public:
    string convert(string s, int numRows) {
        if(numRows==1||numRows>=s.size())
            return s;
        vector<string> rows(numRows);
        int currRow=0;
        bool goesDown=false;
        for(char c:s) {
            rows[currRow]+=c;
            if(currRow==0||currRow==numRows-1)
                goesDown=!goesDown;
            currRow+=goesDown?1:-1;
        }
        string result;
        for(string &row:rows)
            result+=row;
        return result;
    }
};
