//Problem Link: https://leetcode.com/problems/house-robber/

class Solution {
public:
    int rob(vector<int>& nums) {
        int n=nums.size();
        if (n== 1) 
            return nums[0];
        int prev2=0, prev1=nums[0];
        for (int i=1;i<n;i++) {
            int take=nums[i]+prev2;
            int skip=prev1;
            int cur=max(take,skip);
            prev2=prev1;
            prev1=cur;
        }
        return prev1;
    }
};
