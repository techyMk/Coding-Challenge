//Problem Link: https://leetcode.com/problems/letter-case-permutation/

class Solution {
public:
    vector<string> res;
    void solve(string &s, int idx, string curr) {
        if (idx==s.size()) { 
            res.push_back(curr);
            return;
        }
        char ch=s[idx];
        if (isalpha(ch)) {
            solve(s,idx+1,curr+(char)tolower(ch));
            solve(s,idx+1,curr+(char)toupper(ch));
        } else {
            solve(s,idx+1,curr+ch);
        }
    }
    vector<string> letterCasePermutation(string s) {
        solve(s, 0, "");
        return res;
    }
};
