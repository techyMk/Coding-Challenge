//Problem Link: https://leetcode.com/problems/two-city-scheduling/

class Solution {
public:
    int twoCitySchedCost(vector<vector<int>>& costs) {
        int n=costs.size()/2, totalSum=0;
        sort(costs.begin(), costs.end(), [](auto &a, auto &b) {
            return (a[1]-a[0]<b[1]-b[0]);
        });
        for(int i=0;i<n;i++) {
            totalSum+=costs[i][1];
        }
        for(int i=n;i<2*n;i++) {
            totalSum+=costs[i][0];
        }
        return totalSum;
    }
};
