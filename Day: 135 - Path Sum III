//Problem Link: https://leetcode.com/problems/path-sum-iii

/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int count=0;

    void dfs(TreeNode* root, long long currSum,long long target,unordered_map<long long,int>& prefix) {
        if(!root)
            return;
        currSum+=root->val;
        if(prefix.count(currSum-target)) {
            count+=prefix[currSum-target];
        }
        prefix[currSum]++;
        dfs(root->left,currSum,target,prefix);
        dfs(root->right,currSum,target,prefix);
        prefix[currSum]--;
    }
    int pathSum(TreeNode* root,int targetSum) {
        unordered_map<long long,int> prefix;
        prefix[0]=1;  
        dfs(root,0,targetSum,prefix);
        return count;
    }
};
